@model IEnumerable<TODOAPP.Models.ToDoItem>
    <body>
       
    <h1>To-Do List</h1>
    <a href="/Home/Create" class="btn btn-primary">Create New To-Do</a> <br />

    <table class="table mt-2">
        <thead>
            <tr>
                <th>Title</th>
                <th>Completed</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.IsCompleted</td>
                    <td><a href="/Home/Edit/@item.Id">Edit</a></td>
                    <td>
                        <form action="/Home/Delete/@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>